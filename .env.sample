# Project Tutwiler Environment Variables
# Copy this file to .env and update with your configuration
# IMPORTANT: Never commit .env to version control

# ============================================
# USER API KEY (Auto-generated during setup)
# ============================================
# This key uniquely identifies your installation
# It is used for access control and can be whitelisted/banned
# Keep this key secure - it's tied to your user account
USER_API_KEY=

# ============================================
# ADMIN API KEY (Manual - NOT AUTO-GENERATED)
# ============================================
# Admin keys are manually generated and given to trusted administrators
# DO NOT store admin keys in database - keep them secure and separate
# This field should be left empty unless you are an authorized admin
# Contact your system administrator to obtain an admin key
ADMIN_API_KEYS=

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Main database (required for orchestrator)
JAWSDB_URL=

# Optional: Separate databases for verified/non-verified users
JAWSDB_NV_URL=
JAWSDB_V_URL=

# ============================================
# FRONTEND CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:7070
PUBLIC_WEB_ORIGIN=http://localhost:3000

# ============================================
# VERIFICATION PROVIDER
# ============================================
# Defaults to mock - change after verification setup
VERIFY_PROVIDER=mock
PERSONA_CLIENT_ID=
PERSONA_CLIENT_SECRET=
PERSONA_REDIRECT_URI=
PERSONA_ENV=

# ============================================
# OLLAMA CONFIGURATION
# ============================================
OLLAMA_URL=http://ollama:11434
GEN_MODEL=llama3.1:8b
EMBED_MODEL=nomic-embed-text

# ============================================
# PINECONE (Optional - for AI-RAG and CVE services)
# ============================================
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX=

# ============================================
# SERVICE KEYS
# ============================================
RAG_SERVICE_KEY=
API_SIGNING_SECRET=

# ============================================
# CVE INGESTOR (Optional)
# ============================================
NVD_API_BASE=https://services.nvd.nist.gov/rest/json
NVD_API_KEY=
CISA_KEV_JSON=
OSV_API_BASE=https://api.osv.dev
OSV_ENABLED=false
CVE_REFRESH_WINDOW_DAYS=3
CVE_AUTORUN=false

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=
APP_ENV=development
GIT_SHA=
